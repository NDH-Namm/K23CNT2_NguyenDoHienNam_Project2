@using HeThongNhaSach.Models
@{
    ViewData["Title"] = "🌍 Sách Nước Ngoài";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/danhmuc.css?v=123" />
}
<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-3">
            <div class="list-group shadow-sm">
                <a asp-controller="DanhMuc" asp-action="SachTrongNuoc"
                   class="list-group-item list-group-item-action @(ViewBag.Active == "TrongNuoc" ? "active" : "")">
                    📚 Sách Trong Nước
                </a>
                <a asp-controller="DanhMuc" asp-action="SachNgoaiNuoc"
                   class="list-group-item list-group-item-action @(ViewBag.Active == "NgoaiNuoc" ? "active" : "")">
                    🌍 Sách Nước Ngoài
                </a>
                <a asp-controller="DanhMuc" asp-action="DungCuHocSinh"
                   class="list-group-item list-group-item-action @(ViewBag.Active == "DungCu" ? "active" : "")">
                    ✏️ Dụng Cụ Học Sinh
                </a>
                <a asp-controller="DanhMuc" asp-action="DoChoiTreEm"
                   class="list-group-item list-group-item-action @(ViewBag.Active == "DoChoi" ? "active" : "")">
                    🧸 Đồ Chơi
                </a>
            </div>
        </aside>

        <!-- Content -->
        <div class="col-md-9">
            <h3 class="fw-bold text-primary mb-4">Danh mục con</h3>
            <div class="row g-3">
                @foreach (var col in (List<(string, List<string>)>)ViewBag.SubCategories)
                {
                    <div class="col-md-4">
                        <div class="subcategory-card">
                            <h6>@col.Item1</h6>
                            <ul>
                                @foreach (var item in col.Item2)
                                {
                                    <li><a href="#">@item</a></li>
                                }
                                <li><a href="#">Xem tất cả →</a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>

            <hr />

            <h3 class="fw-bold text-primary mb-4">🔥 Sản phẩm nổi bật</h3>
            <div class="row g-4">
                @foreach (var sp in (List<SanPham>)ViewBag.SanPhamNoiBat)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm product-card">
                            <img src="@Url.Content("~/images/Home/" + sp.HinhAnh)" class="card-img-top" alt="@sp.TenSp">
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@sp.TenSp</h6>
                                <small class="text-muted">@sp.TacGia</small>
                                <div class="mt-2 fw-bold text-danger">@sp.GiaBan.ToString("N0") đ</div>
                                <a href="#" class="btn btn-primary btn-sm mt-auto">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
