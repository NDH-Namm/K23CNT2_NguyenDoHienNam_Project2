@model HeThongNhaSach.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm Danh Mục";
}

<h2 class="mb-4">➕ Thêm Danh Mục</h2>

<form asp-action="Create" class="shadow p-4 rounded bg-light">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="TenDm" class="form-label fw-bold"></label>
        <input asp-for="TenDm" class="form-control" placeholder="Nhập tên danh mục" />
        <span asp-validation-for="TenDm" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
