@model HeThongNhaSach.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container my-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">➕ Thêm sản phẩm mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="TenSp" class="form-label fw-bold"></label>
                        <input asp-for="TenSp" class="form-control" placeholder="Nhập tên sản phẩm" />
                        <span asp-validation-for="TenSp" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TacGia" class="form-label fw-bold"></label>
                        <input asp-for="TacGia" class="form-control" placeholder="Tên tác giả" />
                        <span asp-validation-for="TacGia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NhaXuatBan" class="form-label fw-bold"></label>
                        <input asp-for="NhaXuatBan" class="form-control" placeholder="Nhà xuất bản" />
                        <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="GiaGoc" class="form-label fw-bold"></label>
                        <input asp-for="GiaGoc" class="form-control" placeholder="0" />
                        <span asp-validation-for="GiaGoc" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="GiaBan" class="form-label fw-bold"></label>
                        <input asp-for="GiaBan" class="form-control" placeholder="0" />
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="GiamGia" class="form-label fw-bold"></label>
                        <input asp-for="GiamGia" class="form-control" placeholder="%" />
                        <span asp-validation-for="GiamGia" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="HinhAnh" class="form-label fw-bold"></label>
                        <input asp-for="HinhAnh" class="form-control" placeholder="Link ảnh sản phẩm" />
                        <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="MoTa" class="form-label fw-bold"></label>
                        <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaDm" class="form-label fw-bold">Danh mục</label>
                        <select asp-for="MaDm" class="form-select" asp-items="ViewBag.MaDm"></select>
                        <span asp-validation-for="MaDm" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                    <button type="submit" class="btn btn-success fw-bold">💾 Lưu sản phẩm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
