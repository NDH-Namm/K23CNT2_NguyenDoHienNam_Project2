@model HeThongNhaSach.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-md-4 text-center p-4">
                <img src="@Model.HinhAnh" alt="@Model.TenSp" class="img-fluid rounded-3 border" style="max-height: 350px; object-fit: contain;" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3 text-primary">@Model.TenSp</h3>
                    <p class="mb-2"><strong>Tác giả:</strong> @Model.TacGia</p>
                    <p class="mb-2"><strong>Nhà xuất bản:</strong> @Model.NhaXuatBan</p>
                    <p class="mb-2"><strong>Giá gốc:</strong> <del>@String.Format("{0:N0} đ", Model.GiaGoc)</del></p>
                    <p class="mb-2"><strong>Giá bán:</strong> <span class="text-danger fw-bold">@String.Format("{0:N0} đ", Model.GiaBan)</span></p>
                    <p class="mb-2"><strong>Giảm giá:</strong> @Model.GiamGia %</p>
                    <p class="mb-2"><strong>Số đánh giá:</strong> @Model.SoDanhGia</p>
                    <p class="mb-2"><strong>Số sao:</strong> ⭐ @Model.SoSao / 5</p>
                    <p class="mb-2"><strong>Danh mục:</strong> @Model.MaDmNavigation?.TenDm</p>
                    <hr />
                    <p><strong>Mô tả:</strong></p>
                    <p class="text-muted">@Model.MoTa</p>

                    <!-- Nút hành động -->
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.MaSp" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
