
@model HeThongNhaSach.ViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Trang Chủ - Nhà Sách Trực Tuyến";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Banner -->
    <div id="bannerCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Home/Banner2.png" class="d-block w-100" style="max-height:400px; object-fit:cover;" alt="Banner đồ chơi">
            </div>
            <div class="carousel-item">
                <img src="~/images/Home/Banner3.png" class="d-block w-100" style="max-height:400px; object-fit:cover;" alt="Banner tập vở">
            </div>
            <div class="carousel-item">
                <img src="~/images/Home/Banner1.png" class="d-block w-100" style="max-height:400px; object-fit:cover;" alt="Banner sách mới">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Section sản phẩm -->
    <section class="mt-5">
        <h2 class="fw-bold text-primary">📚 Sản phẩm nổi bật</h2>
        <p class="text-muted">Những sản phẩm được yêu thích nhất tại Nhà Sách</p>

        <div class="row g-4">
            @foreach (var sp in Model.SanPhamNoiBat)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm product-card">
                        <span class="badge bg-danger position-absolute m-2">-@sp.GiamGia%</span>
                        <img src="@Url.Content(sp.HinhAnh)"
                             alt="@sp.TenSp"
                             class="card-img-top"
                             style="object-fit:cover; height:250px;" />

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@sp.TenSp</h6>
                            <small class="text-muted">@sp.TacGia</small>
                            <div class="mt-2">⭐ @sp.SoSao <span class="text-muted">(@sp.SoDanhGia)</span></div>
                            <div class="mt-2">
                                <span class="fw-bold text-danger">@sp.GiaBan đ</span>
                                <del class="text-muted">@sp.GiaGoc đ</del>
                            </div>
                            <form asp-controller="GioHang" asp-action="AddToCart" method="post" class="mt-auto">
                                <input type="hidden" name="maSp" value="@sp.MaSp" />
                                <button type="submit" class="btn btn-primary btn-sm">🛒 Mua ngay</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section class="my-5">
        <div class="p-4 rounded-3 text-white"
             style="background: linear-gradient(90deg, #ff4b2b, #ff416c); box-shadow: 0 4px 10px rgba(0,0,0,0.2);">

            <div class="d-flex align-items-center justify-content-between flex-wrap">
                <h2 class="fw-bold mb-3 mb-md-0">⚡ Flash Sale</h2>
                <div id="countdown" class="fs-5 fw-bold bg-dark px-3 py-2 rounded">00:00:00</div>
            </div>
            <p class="mb-4">Nhanh tay chọn ngay những sản phẩm giảm giá cực sốc!</p>

            <div class="row g-4">
                @foreach (var sp in Model.FlashSale)
                {
                    <div class="col-sm-6 col-md-3">
                        <div class="card h-100 shadow-sm product-card">
                            <span class="badge bg-warning text-dark position-absolute m-2">🔥 -@sp.GiamGia%</span>
                            <img src="@Url.Content(sp.HinhAnh)"
                                 alt="@sp.TenSp"
                                 class="card-img-top"
                                 style="object-fit:cover; height:250px;" />
                                 <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@sp.TenSp</h6>
                                <small class="text-muted">@sp.TacGia</small>
                                <div class="mt-2">⭐ @sp.SoSao <span class="text-muted">(@sp.SoDanhGia)</span></div>
                                <div class="mt-2">
                                    <span class="fw-bold text-danger">@sp.GiaBan đ</span>
                                    <del class="text-muted">@sp.GiaGoc đ</del>
                                </div>
                                <form asp-controller="GioHang" asp-action="AddToCart" method="post" class="mt-auto">
                                    <input type="hidden" name="maSp" value="@sp.MaSp" />
                                    <button type="submit" class="btn btn-primary btn-sm">🛒 Mua ngay</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</div>

<footer class="bg-light mt-5 pt-4">
    <div class="container row">
        <div class="col-md-4">
            <h4>Nhà Sách Trực Tuyến</h4>
            <p>Mang đến cho bạn những cuốn sách hay và dụng cụ học tập chất lượng.</p>
        </div>
        <div class="col-md-4">
            <h4>Về chúng tôi</h4>
            <ul class="list-unstyled">
                <li><a href="#">Giới thiệu</a></li>
                <li><a href="#">Tuyển dụng</a></li>
                <li><a href="#">Hệ thống nhà sách</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h4>Hỗ trợ</h4>
            <ul class="list-unstyled">
                <li><a href="#">Chính sách giao hàng</a></li>
                <li><a href="#">Hướng dẫn đặt hàng</a></li>
                <li><a href="#">Liên hệ hỗ trợ</a></li>
            </ul>
        </div>
    </div>
    <div class="bg-dark text-white text-center py-2 mt-3">
        © 2025 Nhà Sách Trực Tuyến. All rights reserved.
    </div>
</footer>

@section Scripts {
    <script>
        // Cập nhật số hiển thị số lượng sản phẩm trong giỏ
        function updateCartCount() {
            let cart = JSON.parse(localStorage.getItem("cart")) || [];
            let totalQty = cart.reduce((sum, p) => sum + p.qty, 0);
            let badge = document.getElementById("cartCount");
            if (badge) {
                badge.innerText = totalQty;
            }
        }

        // Thêm sản phẩm vào giỏ
        function addToCart(name, price) {
            let cart = JSON.parse(localStorage.getItem("cart")) || [];
            let item = cart.find(p => p.name === name);
            if (item) {
                item.qty++;
            } else {
                cart.push({ name: name, price: price, qty: 1 });
            }
            localStorage.setItem("cart", JSON.stringify(cart));
            alert("✅ Đã thêm " + name + " vào giỏ hàng!");
            updateCartCount(); // 👈 sau khi thêm thì cập nhật số badge
        }

        // Load lại số badge khi refresh trang
        updateCartCount();
             // Thiết lập thời gian kết thúc Flash Sale (ví dụ 2h từ bây giờ)
        let deadline = new Date().getTime() + (2 * 60 * 60 * 1000);

        function updateCountdown() {
            let now = new Date().getTime();
            let distance = deadline - now;

            if (distance < 0) {
                document.getElementById("countdown").innerText = "Hết giờ!";
                clearInterval(timer);
                return;
            }

            let hours = Math.floor((distance / (1000 * 60 * 60)) % 24);
            let minutes = Math.floor((distance / (1000 * 60)) % 60);
            let seconds = Math.floor((distance / 1000) % 60);

            document.getElementById("countdown").innerText =
                (hours < 10 ? "0" + hours : hours) + ":" +
                (minutes < 10 ? "0" + minutes : minutes) + ":" +
                (seconds < 10 ? "0" + seconds : seconds);
        }

        let timer = setInterval(updateCountdown, 1000);
        updateCountdown();
    </script>
   
}
