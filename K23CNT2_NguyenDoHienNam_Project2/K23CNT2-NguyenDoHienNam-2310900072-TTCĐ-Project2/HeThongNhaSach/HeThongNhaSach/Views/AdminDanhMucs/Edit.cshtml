@model HeThongNhaSach.Models.DanhMuc

@{
    ViewData["Title"] = "Sửa Danh Mục";
}

<h2 class="mb-4">✏️ Sửa Danh Mục</h2>

<form asp-action="Edit" class="shadow p-4 rounded bg-light">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MaDm" />

    <div class="mb-3">
        <label asp-for="TenDm" class="form-label fw-bold"></label>
        <input asp-for="TenDm" class="form-control" />
        <span asp-validation-for="TenDm" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
