@model HeThongNhaSach.Models.TaiKhoan

@{
    ViewData["Title"] = "Đăng ký - Nhà Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/taikhoan.css" />
}

<div class="container my-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Đăng ký tài khoản</h2>

    <!-- Gửi dữ liệu về action DangKy trong TaiKhoanController -->
    <form asp-action="DangKy" asp-controller="TaiKhoan" method="post">
        <div class="mb-3">
            <label asp-for="HoTen" class="form-label"></label>
            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" required />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatKhau" class="form-label"></label>
            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Tạo mật khẩu" required />
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Xác nhận mật khẩu</label>
            <input name="XacNhanMatKhau" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Đăng ký</button>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center mt-2">@ViewBag.Error</div>
        }
    </form>


    <div class="text-center mt-3">
        <p>Hoặc đăng ký bằng</p>
        <a href="#" class="btn btn-danger w-100 mb-2">📧 Gmail</a>
        <a href="#" class="btn btn btn-zalo w-100">💬 Zalo</a>
    </div>

    <div class="text-center mt-3">
        <p>Bạn đã có tài khoản? <a asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
