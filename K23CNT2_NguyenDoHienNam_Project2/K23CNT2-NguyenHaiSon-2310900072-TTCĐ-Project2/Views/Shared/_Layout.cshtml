<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Nhà Sách Trực Tuyến</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <style>
        /* Không hiện màu/hiệu ứng khi focus */
        .form-control:focus {
            outline: none !important;
            border-color: #ced4da !important;
            box-shadow: none !important;
        }

        /* Hiện dropdown khi hover */
        .nav-item.dropdown:hover > .dropdown-menu {
            display: block;
            visibility: visible;
            opacity: 1;
        }

        /* Chống bị lệch khoảng cách */
        .dropdown-menu {
            margin-top: 0;
            transition: all 0.2s ease; /* hiệu ứng mượt */
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header>
        <div class="bg-dark text-white text-center py-1">
            <span class="me-3">Miễn phí vận chuyển đơn từ 250.000đ</span>
            <span>Hỗ trợ: 1900 636 467</span>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="fs-3 me-2"></div>
                    <span class="fw-bold text-primary">NHÀ SÁCH</span>
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-3">
                        <!-- 📚 Danh mục -->
                        <li class="nav-item dropdown">
                            <a class="nav-link" asp-controller="DanhMuc" asp-action="DanhMuc">Danh mục</a>
                            <!-- Mega menu -->
                            <div class="dropdown-menu p-3 shadow-lg" aria-labelledby="danhMucMenu" style="min-width:700px;">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6 class="fw-bold">📚 Sách Trong Nước</h6>
                                        <ul class="list-unstyled">
                                            <li><a href="/DanhMuc/SachTrongNuoc">Văn học</a></li>
                                            <li><a href="/DanhMuc/SachTrongNuoc">Kinh tế</a></li>
                                            <li><a href="/DanhMuc/SachTrongNuoc">Kỹ năng sống</a></li>
                                            <li><a href="/DanhMuc/SachTrongNuoc">Sách thiếu nhi</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="fw-bold">🌍 Sách Nước Ngoài</h6>
                                        <ul class="list-unstyled">
                                            <li><a href="/DanhMuc/SachNgoaiNuoc">Tiểu thuyết dịch</li>
                                            <li><a href="/DanhMuc/SachNgoaiNuoc">Kinh tế quốc tế</a></li>
                                            <li><a href="/DanhMuc/SachNgoaiNuoc">Học thuật</a></li>
                                            <li><a href="/DanhMuc/SachNgoaiNuoc">Tiếng Anh</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="fw-bold">✏️ Dụng Cụ Học Sinh</h6>
                                        <ul class="list-unstyled">
                                            <li><a href="/DanhMuc/DungCuHocSinh">Đồ dùng học tập</a></li>
                                            <li><a href="/DanhMuc/DungCuHocSinh">Tập - vở</a></li>
                                            <li><a href="/DanhMuc/DungCuHocSinh">Phụ kiện</a></li>
                                            <li><a href="/DanhMuc/DungCuHocSinh">Balo</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="fw-bold">🧸 Đồ Chơi</h6>
                                        <ul class="list-unstyled">
                                            <li><a href="/DanhMuc/DoChoiTreEm">Đồ chơi giáo dục</a></li>
                                            <li><a href="/DanhMuc/DoChoiTreEm">Đồ chơi vận động</a></li>
                                            <li><a href="/DanhMuc/DoChoiTreEm">Đồ chơi sáng tạo</a></li>
                                            <li><a href="/DanhMuc/DoChoiTreEm"></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>

                    <!-- Form tìm kiếm căn giữa -->
                    <form class="mx-auto w-50 position-relative search-form" onsubmit="return false;">
                        <div class="input-group shadow-sm">
                            <input id="searchBox" type="text"
                                   class="form-control rounded-start-pill px-3"
                                   placeholder="🔍 Tìm kiếm sản phẩm, tác giả, nhà xuất bản..."
                                   autocomplete="off">
                           

                        </div>

                        <!-- Gợi ý tìm kiếm -->
                        <ul id="suggestions"
                            class="list-group position-absolute w-100 mt-1 shadow-sm"
                            style="top:100%; z-index:1050; display:none; border-radius: 0 0 20px 20px;">
                        </ul>
                    </form>

                    <!-- CSS cải thiện giao diện -->
                    <style>
                        .search-form {
                            max-width: 500px;
                        }

                        #searchBox:focus {
                            box-shadow: 0 0 5px rgba(220, 53, 69, 0.4);
                            border-color: #dc3545;
                        }

                        #suggestions .list-group-item {
                            cursor: pointer;
                            transition: background 0.2s;
                        }

                            #suggestions .list-group-item:hover {
                                background-color: #f8d7da;
                            }
                    </style>


                    <!-- Các mục khác -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="GioHang" asp-action="Index">
                                🛒 Giỏ hàng
                                
                            </a>
                        </li>
                        <li class="nav-item dropdown position-relative">
                            <a class="nav-link position-relative" asp-controller="ThongBao" asp-action="Index">
                                🔔 Thông báo
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">4</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-2 shadow"
                                style="width:300px; top:100%; left:auto; right:0;">
                                <li class="dropdown-item text-truncate">🎉 Giảm giá 20% sách thiếu nhi</li>
                                <li class="dropdown-item text-truncate">🚚 Đơn hàng #1234 đang vận chuyển</li>
                                <li class="dropdown-item text-truncate">📚 Sách mới: Nhà Giả Kim 2025</li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-center text-primary"
                                       asp-controller="ThongBao" asp-action="Index">Xem tất cả</a>
                                </li>
                            </ul>
                        </li>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    👤 Tài khoản
                                </a>
                                <ul class="dropdown-menu">
                                    @if (Context.Session.GetString("HoTen") != null)
                                    {
                                        <!-- Đã đăng nhập -->
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="ThongTinCaNhan">Thông tin tài khoản</a></li>
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="DonHangCuaToi">Đơn hàng của tôi</a></li>
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="DangXuat">Đăng xuất</a></li>
                                    }
                                    else
                                    {
                                        <!-- Chưa đăng nhập -->
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a></li>
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="DangKy">Đăng ký</a></li>
                                    }
                                    

                                </ul>
                            </li>
                        </ul>

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center mb-0">
            @TempData["Message"]
        </div>
    }
    <!-- Nội dung riêng -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script giỏ hàng -->
    <script>
        function updateCartCount() {
            let cart = JSON.parse(localStorage.getItem("cart")) || [];
            let totalQty = cart.reduce((sum, p) => sum + p.qty, 0);
            let badge = document.getElementById("cartCount");
            if (badge) {
                if (totalQty > 0) {
                    badge.innerText = totalQty;
                    badge.style.display = "inline-block";
                } else {
                    badge.innerText = 0;
                    badge.style.display = "none";
                }
            }
        }
        updateCartCount();
    </script>

    <!-- Script tìm kiếm -->
    <script>
        const searchBox = document.getElementById("searchBox");
        const suggestions = document.getElementById("suggestions");

        const data = ["Đắc Nhân Tâm", "Nhà Giả Kim", "Harry Potter", "Lão Hạc", "Thám tử Conan", "Nguyễn Nhật Ánh"];

        searchBox.addEventListener("input", () => {
            const query = searchBox.value.toLowerCase();
            suggestions.innerHTML = "";
            if (query.trim() === "") {
                suggestions.style.display = "none";
                return;
            }

            const filtered = data.filter(item => item.toLowerCase().includes(query));
            if (filtered.length === 0) {
                suggestions.style.display = "none";
                return;
            }

            filtered.forEach(item => {
                const li = document.createElement("li");
                li.className = "list-group-item";
                li.textContent = item;
                li.onclick = () => {
                    searchBox.value = item;
                    suggestions.style.display = "none";
                };
                suggestions.appendChild(li);
            });
            suggestions.style.display = "block";
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
